<%- include('header'); %>
<div id="weather">
    <% if(error === null){ %>
    <div id="description"><%= description %></div>
        <h1 id="temp"><%= temp %></h1>
        <div id="location"><%= city %></div>
</div>
<div>
    <form id="change-city" method="post" action="/">
        <label for="city-name">City</label>
        <input type="text" id="city-name" name="cityname">
        <br>
        <input type="submit" value="Save changes">
    </form>
    <% } else { %>
        <div class="alert" role="alert">
            <%= error %>
        </div>
        <a href="/" role="button">Try again</a>
        <% } %>
</div>
<%- include('footer'); %>

